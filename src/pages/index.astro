---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HalvingCard from '../components/HalvingCard.astro';
---

<Layout>
	<div class="min-h-screen flex flex-col bg-gradient-to-br from-purple-50 via-pink-50 to-purple-100">
		<Header />
		
		<main class="flex-1 flex items-center justify-center px-2 sm:px-4 py-4 sm:py-8 overflow-x-hidden">
			<HalvingCard />
		</main>
		
		<Footer />
	</div>
</Layout>
